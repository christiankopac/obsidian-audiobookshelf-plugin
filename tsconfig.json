{
	"compilerOptions": {
		"baseUrl": ".",
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2020",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"declaration": true,
		"outDir": "./lib",
		"typeRoots": [
			"node_modules/@types",
			"node_modules/obsidian-typings"
		],
		"types": ["node", "obsidian", "tslib"],
		"lib": [
			"DOM",
			"ES2017",
			"ES2018"
		],
		"skipLibCheck": true,
		"strict": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts"
	]
}
